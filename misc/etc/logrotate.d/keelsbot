# logrotate KeelsBot logs

/var/log/keelsbot/*.log {
	missingok
	notifempty
	copytruncate
}

/var/log/keelsbot/chatbot-*/*.log {
	missingok
	ifempty
	nocreate
	sharedscripts
	postrotate
		find /var/log/keelsbot/chatbot-*/* -maxdepth 1 -mtime +30 -exec rm -f '{}' \+
	endscript
}

/var/log/keelsbot/muc_logs/*.log {
	monthly
	rotate 24
	missingok
	notifempty
	copytruncate
}
